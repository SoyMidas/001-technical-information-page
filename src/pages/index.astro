---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import { SectionsData } from "../constants/index";
---

<Layout title="WEEEENASS">
  <main class="flex flex-col gap-4 bg-blue-950/10 p-10 h-full">
    {
      SectionsData.map((item) => {
        return (
          <Section title={item.title} id={item.id}>
            {item.content}
            {item.img && (
              <img
                src={item.img.src}
                alt={item.img.alt}
                loading="lazy"
                class="w-1/2 rounded p-3 mx-auto my-0"
              />
            )}
            {item.list && (
              <ul class="space-y-2 list-decimal ml-4 my-4">
                {Object.values(item.list).map((value) => (
                  <li class="ml-2">{value}</li>
                ))}
              </ul>
            )}
            {item.sections && (
              <>
                {item.sections.map((section) => (
                  <section class="ml-2">
                    {section.title !== undefined && (
                      <h2 class="text-xl my-3">{section.title}</h2>
                    )}
                    <p>{section.content}</p>
                  </section>
                ))}
              </>
            )}
          </Section>
        );
      })
    }
    <p class="text-white place-self-center p-3 rounded bg-slate-50/20">
      This is a short introduction for more information look up at the info's
      page at <a class="text-blue-500 font-bold hover:text-blue-300" target="_blank" href="https://developer.mozilla.org/en-US/docs/Learn/CSS"
        >mdn</a>
    </p>
  </main>
</Layout>
